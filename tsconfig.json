{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".", // Set the base URL to the root of the project
    "paths": {
      "@/*": ["./src/*"], // Already existing alias for the 'src' folder
      "supabase/*": ["./supabase/*"] // Alias for the 'supabase' folder in the root
    },
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false
  }
}
